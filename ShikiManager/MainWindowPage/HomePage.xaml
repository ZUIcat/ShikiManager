<Page x:Class="ShikiManager.MainWindowPage.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShikiManager.MainWindowPage"
      mc:Ignorable="d" 
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <StackPanel Orientation="Vertical">
            <Button x:Name="ProcessButton"
                    Content="SelectProcess"/>
            <Button x:Name="SelectTextButton"
                    Content="SelectText"/>
            <Button x:Name="SelectFilterButton"
                    Content="SelectFilter"/>
            <Button x:Name="ShowTranslationWindow"
                    Content="ShowTranslationWindow"/>
        </StackPanel>
    </Grid>
</Page>
